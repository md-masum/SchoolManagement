@model SchoolManagement.Models.BoardOfDirector
@{
    ViewBag.Title = "Board Of DirectorForm";
}

<h2>Board Of Director Form</h2>

@using (Html.BeginForm("Save", "BoardOfDirector"))
{
    @Html.ValidationSummary(true, "Please fix following errors.")

    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new {@class = "form-control"})
        @Html.ValidationMessageFor(m => m.Name)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Designation)
        @Html.TextBoxFor(m => m.Designation, new {@class = "form-control"})
        @Html.ValidationMessageFor(m => m.Designation)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.EducationalQualification)
        @Html.TextBoxFor(m => m.EducationalQualification, new {@class = "form-control"})
        @Html.ValidationMessageFor(m => m.EducationalQualification)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Catagory)
        @Html.TextBoxFor(m => m.Catagory, new {@class = "form-control"})
        @Html.ValidationMessageFor(m => m.Catagory)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Comment)
        @Html.TextBoxFor(m => m.Comment, new {@class = "form-control"})
        @Html.ValidationMessageFor(m => m.Comment)
    </div>
    @Html.HiddenFor(c => c.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}
@Html.ActionLink("Go back", "Index", "BoardOfDirector")

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}

