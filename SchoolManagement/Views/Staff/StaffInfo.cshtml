@model IEnumerable<SchoolManagement.Models.Staff>
@{
    ViewBag.Title = "StaffInfo";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<!--=========== BEGIN COURSE BANNER SECTION ================-->
<section id="imgBanner">
    <h2>Staff Information</h2>
    <br />
    <br />
    <br />
</section>
<!--=========== END COURSE BANNER SECTION ================-->
<!--=========== BEGIN OUR TUTORS SECTION ================-->
<section id="ourTutors">
    <div class="container">
        <!-- Our courses titile -->
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <div class="title_area">
                    <h2 class="title_two">Staff</h2>
                    <span></span>
                </div>
            </div>
        </div>
        <!-- End Our courses titile -->
        <!-- Start Our courses content -->
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="ourTutors_content">
                    <!-- Start Tutors nav -->
                    <ul class="tutors_nav">
                        @if (Model.Any())
                        {
                            foreach (var staff in Model)
                            {
                                <li>
                                    <div class="single_tutors">
                                        <div class="tutors_thumb">
                                            <img src="~/WebsiteTemplate/img/author.jpg" />
                                        </div>
                                        <div class="singTutors_content">
                                            <h3 class="tutors_name">@staff.Name</h3>
                                            <span>@staff.Designation</span>
                                            <p>@staff.PhoneNumber</p>
                                        </div>
                                        <div class="singTutors_social">
                                            <ul class="tutors_socnav">
                                                <li><a class="fa fa-facebook" href="#"></a></li>
                                                <li><a class="fa fa-twitter" href="#"></a></li>
                                                <li><a class="fa fa-instagram" href="#"></a></li>
                                                <li><a class="fa fa-google-plus" href="#"></a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </li>
                            }
                        }
                        else
                        {
                            <li>Sorry we don't have any record!</li>
                        }

                    </ul>
                </div>
            </div>
        </div>
        <!-- End Our courses content -->
    </div>
</section>
<!--=========== END OUR TUTORS SECTION ================-->

