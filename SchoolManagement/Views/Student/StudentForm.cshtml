@using System.Web.Mvc.Html
@model SchoolManagement.Models.Student
@{
    ViewBag.Title = "Student";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="">Student Form</h2>
@using (Html.BeginForm("Save", "Student"))
{
    @Html.ValidationSummary(true, "Please fix following errors.")
    <div class="row">
        <h3 class="text-center">Personal Infrmation</h3>
        <hr/>
        <div class="col-md-5 jumbotron">
            <div class="form-group">
                @Html.LabelFor(m => m.FirstName)
                @Html.TextBoxFor(m => m.FirstName, new {@class = "form-control"})
                @Html.ValidationMessageFor(m => m.FirstName)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.LastName)
                @Html.TextBoxFor(m => m.LastName, new {@class = "form-control"})
                @Html.ValidationMessageFor(m => m.LastName)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.NickName)
                @Html.TextBoxFor(m => m.NickName, new {@class = "form-control"})
                @Html.ValidationMessageFor(m => m.NickName)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.DateOfBirthDateTime)
                @Html.TextBoxFor(m => m.DateOfBirthDateTime, "{0:d MMM yyyy}", new {@class = "form-control"})
                @Html.ValidationMessageFor(m => m.DateOfBirthDateTime)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Hometown)
                @Html.TextBoxFor(m => m.Hometown, new {@class = "form-control"})
                @Html.ValidationMessageFor(m => m.Hometown)
            </div>
        </div>
        <div class="col-md-2"></div>
        <div class="col-md-5 jumbotron">
            <div class="form-group">
                @Html.LabelFor(m => m.Gender)
                @Html.DropDownListFor(m => m.Gender,
                    new List<SelectListItem>
                    {
                        new SelectListItem {Value = "Male", Text = "Male"},
                        new SelectListItem {Value = "Female", Text = "Female"}
                    },
                    new {@class = "form-control"})
                @Html.ValidationMessageFor(m => m.Gender)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.BloodGroup)
                @Html.TextBoxFor(m => m.BloodGroup, new {@class = "form-control"})
                @Html.ValidationMessageFor(m => m.BloodGroup)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Religion)
                @Html.TextBoxFor(m => m.Religion, new {@class = "form-control"})
                @Html.ValidationMessageFor(m => m.Religion)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Nationality)
                @Html.TextBoxFor(m => m.Nationality, new {@class = "form-control"})
                @Html.ValidationMessageFor(m => m.Nationality)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.PasportNo)
                @Html.TextBoxFor(m => m.PasportNo, new {@class = "form-control"})
                @Html.ValidationMessageFor(m => m.PasportNo)
            </div>
        </div>
    </div>
    <div class="row">
        <h3 class="text-center">Guardian Infrmation</h3>
        <hr/>
        <div class="col-md-5 jumbotron">
            <p>Father and Mother Details</p>
            <hr/>
            <div class="form-group">
                @Html.LabelFor(m => m.FatherName)
                @Html.TextBoxFor(m => m.FatherName, new {@class = "form-control"})
                @Html.ValidationMessageFor(m => m.FatherName)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.FatherContactNo)
                @Html.TextBoxFor(m => m.FatherContactNo, new {@class = "form-control"})
                @Html.ValidationMessageFor(m => m.FatherContactNo)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.FatherOccupation)
                @Html.TextBoxFor(m => m.FatherOccupation, new {@class = "form-control"})
                @Html.ValidationMessageFor(m => m.FatherOccupation)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.MotherName)
                @Html.TextBoxFor(m => m.MotherName, new {@class = "form-control"})
                @Html.ValidationMessageFor(m => m.MotherName)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.MotherContactNo)
                @Html.TextBoxFor(m => m.MotherContactNo, new {@class = "form-control"})
                @Html.ValidationMessageFor(m => m.MotherContactNo)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.MotherOccupation)
                @Html.TextBoxFor(m => m.MotherOccupation, new {@class = "form-control"})
                @Html.ValidationMessageFor(m => m.MotherOccupation)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ParentAddress)
                @Html.TextBoxFor(m => m.ParentAddress, new {@class = "form-control"})
                @Html.ValidationMessageFor(m => m.ParentAddress)
            </div>
        </div>
        <div class="col-md-2"></div>
        <div class="col-md-5 jumbotron">
            <p>Local Guardian's Details</p>
            <hr/>
            <div class="form-group">
                @Html.LabelFor(m => m.GuardianName)
                @Html.TextBoxFor(m => m.GuardianName, new {@class = "form-control"})
                @Html.ValidationMessageFor(m => m.GuardianName)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.GaurdianContactNo)
                @Html.TextBoxFor(m => m.GaurdianContactNo, new {@class = "form-control"})
                @Html.ValidationMessageFor(m => m.GaurdianContactNo)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Relationship)
                @Html.TextBoxFor(m => m.Relationship, new {@class = "form-control"})
                @Html.ValidationMessageFor(m => m.Relationship)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.GuardianAddress)
                @Html.TextBoxFor(m => m.GuardianAddress, new {@class = "form-control"})
                @Html.ValidationMessageFor(m => m.GuardianAddress)
            </div>
        </div>
    </div>
    <div class="row">
        <h3 class="text-center">Contact / Address</h3>
        <hr/>
        <div class="col-md-4 jumbotron">
            <p>Contact Details</p>
            <hr/>
            <div class="form-group">
                @Html.LabelFor(m => m.PhoneNo)
                @Html.TextBoxFor(m => m.PhoneNo, new {@class = "form-control"})
                @Html.ValidationMessageFor(m => m.PhoneNo)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.PhoneNo1)
                @Html.TextBoxFor(m => m.PhoneNo1, new {@class = "form-control"})
                @Html.ValidationMessageFor(m => m.PhoneNo1)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.PhoneNo2)
                @Html.TextBoxFor(m => m.PhoneNo2, new {@class = "form-control"})
                @Html.ValidationMessageFor(m => m.PhoneNo2)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email, new {@class = "form-control"})
                @Html.ValidationMessageFor(m => m.Email)
            </div>
        </div>
        <div class="col-md-4 jumbotron">
            <p>Permanent Address</p>
            <hr/>
            <div class="form-group">
                @Html.LabelFor(m => m.PermanentAddress)
                @Html.TextBoxFor(m => m.PermanentAddress, new {@class = "form-control"})
                @Html.ValidationMessageFor(m => m.PermanentAddress)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.PermanentPostOffice)
                @Html.TextBoxFor(m => m.PermanentPostOffice, new {@class = "form-control"})
                @Html.ValidationMessageFor(m => m.PermanentPostOffice)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.PermanentDistrict)
                @Html.TextBoxFor(m => m.PermanentDistrict, new {@class = "form-control"})
                @Html.ValidationMessageFor(m => m.PermanentDistrict)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.PermanentDivision)
                @Html.TextBoxFor(m => m.PermanentDivision, new {@class = "form-control"})
                @Html.ValidationMessageFor(m => m.PermanentDivision)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.PermanentCountry)
                @Html.TextBoxFor(m => m.PermanentCountry, new {@class = "form-control"})
                @Html.ValidationMessageFor(m => m.PermanentCountry)
            </div>
        </div>
        <div class="col-md-4 jumbotron">
            <p>Present Address</p>
            <hr/>
            <div class="form-group">
                @Html.LabelFor(m => m.PresentAddress)
                @Html.TextBoxFor(m => m.PresentAddress, new {@class = "form-control"})
                @Html.ValidationMessageFor(m => m.PresentAddress)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.PresentPostOffice)
                @Html.TextBoxFor(m => m.PresentPostOffice, new {@class = "form-control"})
                @Html.ValidationMessageFor(m => m.PresentPostOffice)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.PresentDistrict)
                @Html.TextBoxFor(m => m.PresentDistrict, new {@class = "form-control"})
                @Html.ValidationMessageFor(m => m.PresentDistrict)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.PresentDivision)
                @Html.TextBoxFor(m => m.PresentDivision, new {@class = "form-control"})
                @Html.ValidationMessageFor(m => m.PresentDivision)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.PresentCountry)
                @Html.TextBoxFor(m => m.PresentCountry, new {@class = "form-control"})
                @Html.ValidationMessageFor(m => m.PresentCountry)
            </div>
        </div>
    </div>
    @Html.HiddenFor(c => c.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Add or Update Info</button>
}

@Html.ActionLink("Go back", "Index", "Student")

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}


